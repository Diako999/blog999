<h1 class="text-center mt-4 text-white">Sign In</h1>

<div class="row justify-content-center mt-5">
  <div class="col-10">
    <%= form_with scope: :session, url: login_path, class: 'shadow p-3 mb-5 bg-info rounded' ,local: true do |form| %>
    <div class="form-group row">
      <%= form.label :email, class: 'col-2 col-form-label text-white' %><br>
      <div class="col-8">
        <%= form.email_field :email, class: 'form-control', placeholder: "enter your email" %><br><br>
      </div>

    </div>
    <div class="form-group row">
      <%= form.label :password, class: 'col-2 col-form-label text-white' %><br>
      <div class="col-8">
        <%= form.password_field :password, class: 'form-control', placeholder: "password" %><br><br>
      </div>

    </div>
    <div class="form-group row justify-content-center">
      <div class="col-8">
         <%= form.submit  "Log In", class: "btn btn-primary btn-lg" %>
        <%= link_to '[cancel and return ]', articles_path, class: 'btn btn-danger btn-lg ml-4' %>
      </div>

    </div>

    <% end %>
  </div>

</div>
