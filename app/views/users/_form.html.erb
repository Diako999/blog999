<% if @user.errors.any? %>
  <h3>the following errors prevented the article from being created</h3>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>

<% end %>
<div class="row justify-content-center">
  <div class="col-10">
    <%= form_with model: @user, class: 'shadow p-3 mb-5 bg-info rounded' ,local: true do |form| %>
    <div class="form-group row">
      <%= form.label :username, class: 'col-2 col-form-label text-white' %><br>
      <div class="col-8">
          <%= form.text_field :username, class:'form-control', placeholder: "choose a username" %><br><br>
      </div>

    </div>
    <div class="form-group row">
      <%= form.label :email, class: 'col-2 col-form-label text-white' %><br>
      <div class="col-8">
        <%= form.email_field :email, class: 'form-control', placeholder: "enter your email" %><br><br>
      </div>

    </div>
    <div class="form-group row">
      <%= form.label :password, class: 'col-2 col-form-label text-white' %><br>
      <div class="col-8">
        <%= form.password_field :password, class: 'form-control', placeholder: "choose a password" %><br><br>
      </div>

    </div>
    <div class="form-group row justify-content-center">
      <div class="col-8">
         <%= form.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg") %>
        <%= link_to '[cancel and return ]', articles_path, class: 'btn btn-danger btn-lg ml-4' %>
      </div>

    </div>

    <% end %>
  </div>

</div>
